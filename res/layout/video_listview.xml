<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="#000000" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Postix"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7.3"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:weightSum="10" >

        <!-- ************************************************************** -->

        <RelativeLayout
            android:id="@+id/RR"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/green"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/green"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/red"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/green"
                android:layout_marginRight="15dp"
                android:background="@drawable/red"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <!-- ************************************************************* -->

        <RelativeLayout
            android:id="@+id/RR1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" >

            <Button
                android:id="@+id/category"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/btn1_1"
                android:text="Yoga"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/sub_category"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/category"
                android:layout_marginRight="15dp"
                android:background="@drawable/btn2"
                android:text="multi-media resumes"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <Button
                android:id="@+id/keyword_button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn2"
                android:textColor="#ffffff"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RR2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_below="@+id/RR1"
            android:layout_weight="7.5"
            android:paddingTop="4dp" >

            <ListView
                android:id="@+id/listView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="10dp"
                android:scrollbarSize="4dp"
                android:scrollbarThumbVertical="@color/black"
                android:smoothScrollbar="true" >
            </ListView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#000000" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:weightSum="2" >

            <Button
                android:id="@+id/new_search"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn3_2"
                android:text="New Search"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/last_search"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="0dp"
                android:layout_toRightOf="@+id/button6"
                android:layout_weight="1"
                android:background="@drawable/btn1_1"
                android:text="Last Search"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>